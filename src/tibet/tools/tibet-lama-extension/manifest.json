{
    "manifest_version": 2,
    "name": "tibetlama",
    "description": "TIBET Lama developer extension for Chrome DevTools",
    "version": "1.0",
    "devtools_page": "./TIBET-INF/boot/xhtml/tibetlama.xhtml",
    "background": {
        "persistent": true,
        "scripts": [
            "./TIBET-INF/boot/scripts/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./TIBET-INF/boot/scripts/content.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "http://*/*/",
        "file://*/*/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; default-src 'self'; object-src 'none'; report-uri '/'"
}
