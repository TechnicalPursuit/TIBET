<?xml version="1.0"?>

<package xmlns="http://www.technicalpursuit.com/1999/tibet"
    basedir="~app_tags/APP.{{appname}}.app"
    name="{{appname}}.app" default="base">


<!-- xxxxxxxxxxxxxxxxxxxxxxx -->
<!-- EDIT BELOW AS NEEDED    -->
<!-- xxxxxxxxxxxxxxxxxxxxxxx -->

<config id="properties">
    <!-- put tag-specific property tags here -->
</config>

<config id="scripts">
    <!-- tag-related source file references here -->
    <script src="APP.{{appname}}.app.js"/>
</config>

<config id="resources">
    <!-- tag-related resource entries here -->
    <resource href="APP.{{appname}}.app.xhtml"/>
    <resource href="APP.{{appname}}.app.css"/>
</config>

<config id="tests">
    <!-- tag-related test scripts here -->
    <script src="APP.{{appname}}.app_test.js"/>
</config>


<!-- xxxxxxxxxxxxxxxxxxxxxxx -->
<!-- EDIT WITH CAUTION BELOW -->
<!-- xxxxxxxxxxxxxxxxxxxxxxx -->

<config id="base">
    <config ref="properties"/>
