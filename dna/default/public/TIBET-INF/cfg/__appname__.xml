<?xml version="1.0"?>

<package xmlns="http://www.technicalpursuit.com/1999/tibet"
    name="{{appname}}" default="base" basedir="~app_src">

<config id="addons">
    <!-- put your a-la-carte library addons here -->
</config>

<config id="properties" if="boot.phase_two">
    <!-- put common app-specific property tags here -->
</config>

<config id="scripts">
    <!-- put your source script references here -->
    <script src="APP.{{appname}}.js" />
    <script src="APP.{{appname}}.Object.js" />
    <script src="APP.{{appname}}.Application.js" />

    <package src="~app_tags/APP.{{appname}}.app/" config="scripts" />
</config>

<config id="resources">
    <!-- put your explicit resource entries here -->
    <resource href="~app/styles"/>

    <package src="~app_tags/APP.{{appname}}.app/" config="resources" />
</config>

<config id="tests">
    <!-- put your test scripts here -->
    <script src="~app_test/APP_test.js" />

    <package src="~app_tags/APP.{{appname}}.app/" config="tests" />
</config>


<!-- xxxxxxxxxxxxxxxxxxxxxxx -->
<!-- EDIT WITH CAUTION BELOW -->
<!-- xxxxxxxxxxxxxxxxxxxxxxx -->


<config id="base" if="boot.phase_two">
    <!-- TIBET library a-la-carte code -->
    <config ref="addons"/>

    <!-- APP configuration and components -->
    <config ref="properties"/>
    <config ref="scripts"/>
    <config ref="resources"/>

    <!-- Inlined resources from 'build' processing -->
    <config ref="inlined"/>
</config>

<config id="baseui" if="boot.phase_two">
    <config ref="base"/>
</config>

<config id="full" if="boot.phase_two">
    <config ref="base"/>
</config>

<config id="developer" if="boot.phase_two">
    <config ref="full"/>
    <config ref="tests"/>
</config>

<config id="testing" if="boot.phase_two">
    <config ref="developer"/>
</config>


<!-- xxxxxxxxxxxxxxxxxxxxxxx -->
<!-- EDITING NOT RECOMMENDED -->
<!-- xxxxxxxxxxxxxxxxxxxxxxx -->


<config id="inlined" if="boot.phase_two boot.inlined">
    <!-- maintained by tibet resources command -->
</config>

</package>
