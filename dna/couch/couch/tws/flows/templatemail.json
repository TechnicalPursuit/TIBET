{
    "type": "flow",
    "name": "templatemail",
    "owner": "Team TIBET",
    "tasks": {
        "structure": "sequence",
        "sequence": [{
            "task": "templater",
            "guards": [{
                "test": "/TIBET/i.test('\{{params.input}}')",
                "state": "$$failed"
            }]
        }, {
            "task": "smtp",
            "params": {
                "html": "\{{params.text}}"
            },
            "stdio": {
                "result": "text"
            },
            "guards": [{
                "test": "'\{{job._id}}' != ''"
            }]
        }]
    },
    "params": {
        "job-level params": "go here"
    }
}
