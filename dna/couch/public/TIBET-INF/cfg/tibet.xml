<?xml version="1.0"?>

<package xmlns="http://www.technicalpursuit.com/1999/tibet"
    name="{{appname}}" default="base" basedir="~app_cfg">

<config id="base" if="boot.phase_one">
    <package src="~lib_cfg/TIBET.xml" config="base" if="boot.unpackaged" />
    <script src="~lib_build/tibet_base.js" if="boot.unminified" unless="boot.unpackaged" />
    <script src="~lib_build/tibet_base.min.js" unless="boot.unminified boot.unpackaged" />
</config>

<config id="full" if="boot.phase_one">
    <package src="~lib_cfg/TIBET.xml" config="full" if="boot.unpackaged" />
    <script src="~lib_build/tibet_full.js" if="boot.unminified" unless="boot.unpackaged" />
    <script src="~lib_build/tibet_full.min.js" unless="boot.unminified boot.unpackaged" />
</config>

<config id="developer" if="boot.phase_one">
    <package src="~lib_cfg/TIBET.xml" config="developer" if="boot.unpackaged" />
    <script src="~lib_build/tibet_developer.js" if="boot.unminified" unless="boot.unpackaged" />
    <script src="~lib_build/tibet_developer.min.js" unless="boot.unminified boot.unpackaged" />
</config>

<config id="contributor" if="boot.phase_one">
    <config ref="developer"/>
    <package src="~lib_cfg/tibet_testing.xml" config="tests"/>
</config>

</package>
